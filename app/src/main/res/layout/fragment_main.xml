<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment"
    android:background="@drawable/fondo1"
    android:id="@+id/fondo1">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:background="@drawable/tituloprin"


        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/btn1a3"
        android:background="@drawable/botones1"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/btn3a6"
        android:background="@drawable/boton2"
        android:layout_below="@+id/btn1a3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/button"
        android:layout_below="@+id/btn3a6"
        android:layout_alignLeft="@+id/btn3a6"
        android:layout_alignStart="@+id/btn3a6"
        android:layout_marginTop="20dp"
        android:background="@drawable/acercade" />

</RelativeLayout>
