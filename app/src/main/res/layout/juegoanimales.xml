<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/titulos2"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/famani"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ivVisor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <HorizontalScrollView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none"
        android:layout_marginBottom="58dp"
        android:id="@+id/horizontalScrollView2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ivVisor"
        android:layout_alignStart="@+id/ivVisor">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/leonfin"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ivLeon"
                android:padding="20dp"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/monofin"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ivMono"
                android:padding="20dp"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/osofin"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ivOso"
                android:padding="20dp"/>

            <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/perrofin"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ivPerro"
            android:padding="20dp"/>
            <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ranafim"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ivRana"
            android:padding="20dp"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/patofin"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ivPato"
                android:padding="20dp"/>

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>